name = NeSI
description = 'Custom theme for New Zealand eScience Infrastructure (nesi.org.nz); a subtheme of <a href="http://drupal.org/project/bootstrap">bootstrap</a> starterkit.'
core = 7.x
base theme = bootstrap

regions[header]         = 'Top Bar'
regions[subheader]      = 'Sub Header'
regions[highlighted]    = 'Highlighted'
regions[help]           = 'Help'
regions[content]        = 'Content'
regions[sidebar_first]  = 'Primary'
regions[sidebar_second] = 'Secondary'
regions[directory]      = 'Directory'
regions[collaborators]  = 'Collaborators'
regions[footer]         = 'Footer'

; Stylesheets
stylesheets[all][] = css/style.css

; Add custom bootstrap
stylesheets[all][] = assets/css/bootstrap.css
stylesheets[all][] = assets/css/responsive.css

; Add JavaScript
scripts[] = assets/js/custom.js

settings[toggle_name] = 1
settings[toggle_search] = 0
settings[toggle_logo] = 0

; Remove parent theme declaration
; Currently not working, investigating and disabled for now
;exclude[css][] = bootstrap/css/bootstrap.css
;exclude[css][] = bootstrap/css/bootstrap-responsive.css
