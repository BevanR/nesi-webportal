/**
 * Implementation of hook init
 */
function nesi_mstep_proposal_init() {
  // Don't cache proposal page for anonymous users!

  // if the path leads to the wizard
  if (drupal_match_path($_GET['q'], 'apply/*')) {
    // set cache to false
    $GLOBALS['conf']['cache'] = FALSE;   
  }
}

